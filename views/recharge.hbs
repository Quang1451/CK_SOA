<div class="container">
    <h1 class="mb-4 text-center">Nạp tiền</h1>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="wrap p-4 p-lg-5">
                <form method="POST" class="signin-form">
                    <div class="form-group row mb-3">
                        <div class="col-lg-12">
                            <label class="label">Số thẻ ( bao gồm 6 chữ số )</label>
                            <input type="text" maxlength="6" class="form-control number-only" name="cardId" required>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <div class="col-lg-12">
                            <label class="label">Ngày hết hạn</label>
                            <input type="date" class="form-control" name="cardDate" required>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <div class="col-lg-12">
                            <label class="label">Mã CVV ( bao gồm 3 chữ số )</label>
                            <input type="text" min="0" maxlength="3" class="form-control number-only" name="CVV"
                                required>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <div class="col-lg-12">
                            <label class="label">Số tiền cần nạp</label>
                            <input type="number" min="0" class="form-control number-only" name="money" required>
                        </div>
                    </div>
                    {{#if message}}
                    <div class="alert alert-{{message.type}}">
                        {{message.msg}}
                    </div>
                    {{/if}}
                    <div class="form-group">
                        <button type="submit" class="form-control btn btn-primary submit px-3">Nạp tiền</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>