<div class="container">
    <h1 class="mb-4 text-center">Xác nhận OTP</h1>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="wrap p-4 p-lg-5">
                <form method="POST" class="signin-form" enctype="multipart/form-data">
                    <div class="form-group row mb-3">
                        <div class="col-lg-12">
                            <label class="label">Mã OTP</label>
                            <input type="text" maxlength="6" class="form-control" name="OTP" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="form-control btn btn-primary submit px-3">Xác nhận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>