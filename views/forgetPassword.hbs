<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-11">
                <div class="wrap d-md-flex">
                    <div class="text-wrap all-color p-4 p-lg-5 text-center d-flex align-items-center">
                        <div class="text w-100">
                            <p>Bạn đã có tài khoản?</p>
                            <a href="/login" class="btn btn-white btn-outline-white">Đăng nhập</a>
                        </div>
                    </div>
                    <div class="col-lg-9 login-wrap p-4 p-lg-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Quên mật khẩu</h3>
                            </div>
                        </div>
                        <form method="POST" class="signin-form">
                            <div class="form-group row mb-3">
                                <div class="col-lg-12">
                                    <label class="label">Email</label>
                                    <input type="text" class="form-control" name="email" required>
                                </div>
                            </div>
                            <div class="form-group row mb-3">
                                <div class="col-lg-12">
                                    <label class="label">Số điện thoại</label>
                                    <input type="text" class="form-control number-only" name="phone" required>
                                </div>
                            </div>
                            {{#if message}}
                            <div class="alert alert-{{message.type}}">
                                {{message.msg}}
                            </div>
                            {{/if}}
                            <div class="text-center text-lg-right">
                                <button type="submit" class="btn btn-primary">Xác nhận</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
